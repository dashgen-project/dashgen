<%- include('../partials/header'); -%>

<h3 class="mb-4">Editar dashboard</h3>

<form action="/courseDashboards/<%= dashboard._id %>?_method=PUT" method="POST" class="mb-4">
    <div class="mb-3">
        <label for="title" class="form-label">
            <h4>Título do dashboard:</h4>
        </label>
        <input type="text" class="form-control" name="dashboard[title]" id="title" aria-describedby="dashboard-title"
            value="<%= dashboard.title %>">
    </div>
    <h4>Vídeos na playlist:</h4>
    <ol class="list-group list-group-numbered mb-4">
        <% for (let video of dashboard.videos) { %>
        <li class="list-group-item">
            <a class="link-primary" href="/courseDashboards/<%= dashboard._id %>/<%= video._id %>"><%= video.title %> -
                <%= video.videoId %></a>
        </li>
        <% } %>
    </ol>
    <div class="btn-group">
        <button type="submit" class="btn btn-outline-primary">Salvar</button>
        <button class="btn btn-outline-primary">Ver dashboard</button>
    </div>
</form>
<form class="d-inline" action="/courseDashboards/<%= dashboard._id %>?_method=DELETE" method="POST">
    <button class="btn btn-outline-danger">Deletar dashboard</button>
</form>
